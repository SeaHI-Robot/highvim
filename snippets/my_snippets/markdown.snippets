# ========= Pandoc-Eisvogel ==========
snippet pandoc_frontmatter 
	---
	title: "${1:title}"
	author: [${2:Siyuan Wang}]
	date: "20${3:24}-${4:01}-${5:01}"
	---

    
# ========== Marp ==========
snippet marp_frontmatter 
	---
	marp: true
	theme: default
	paginate: true
	math: katex
	---


# ========== Slidev ==========
snippet sdv_twocols "Two Column Layout"
	---
	layout: two-cols
	---

	# Left

	This shows on the left

	::right::

	# Right

	This shows on the right

snippet sdv_underline "UnderlineAnimation-Mark"
	<span v-mark.underline.red="3">$0</span> 

# "3"代表展示的次序
snippet sdv_circle "CircleAnimation-Mark"
	<span v-mark.circle.orange="4">$0</span>

# "4"代表展示的次序
snippet sdv_vclick "ClickAnimation"
	<v-click>
	${1:hello}
	</v-click>    

snippet sdv_items "Items"
	<v-click>
	- Item 1
	  - Item 1.1 
	  - Item 1.2 
	- Item 2
	  - Item 2.1 
	  - Item 2.2 
	</v-clicks>	

snippet sdv_latex_array "Latex-one-by-one"
	$$ {1|2|3|all}
	\begin{array}{c}

	 \\

	 \\

	\end{array}
	$$

# {1|2|3|all}代表先展示第一行公式，再第三行，然后全部行	
snippet sdv_layout 
	layout: ${0}

snippet sdv_pos
	position: ${0}

snippet sdv_trans
	transition: ${VISUAL:slide-left}

snippet sdv_theme
	theme: ${1:default}

snippet sdv_footnote "仅在seriph和default使用" 
	![^1]

	<br>
	[^1]: ${1:footnote}

snippet sdv_page "PageNumberComment"
	<!-- page: p${0:1} --> 
		
# ========= Just the Docs ==========
snippet h "#"
	# ${0:h1}

snippet h2 "##"
	## ${0:h2}
    {: .fs-7 }

snippet h3 "###"
	### ${0:h3}
    {: .fs-6 }

snippet h4 "####"
	#### ${0:h4}
    {: .fs-4 }

snippet foldable_toc "Foldable Table of Contents"
    <details open markdown="block">
      <summary>
        Table of contents
      </summary>
      {: .text-delta }
